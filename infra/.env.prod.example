# Production environment (example). Copy to infra/.env.prod and fill in real values.
# Critical secrets and settings
PROJECT_SERVICE_TOKEN=REPLACE_WITH_STRONG_RANDOM
PROJECT_ENCRYPTION_KEY=REPLACE_WITH_BASE64_FERNET_KEY
PROJECT_DB_PATH=/srv/data/projects.db

# CORS / Frontend <-> Backend
ALLOWED_ORIGINS=https://www.example.com
NEXT_PUBLIC_API_URL=https://api.example.com

# Redis / Celery
REDIS_URL=redis://leeway-redis:6379/0
CELERY_BROKER_URL=redis://leeway-redis:6379/0
CELERY_RESULT_BACKEND=redis://leeway-redis:6379/1

# OSRM routing
OSRM_URL=http://osrm-routing:5000
OSRM_STRICT=1
OSRM_DURATION_BATCH_SIZE=12
OSRM_DISTANCE_BATCH_SIZE=12
OSRM_REQUEST_TIMEOUT=10
OSRM_REQUEST_ATTEMPTS=3
OSRM_RETRY_TOTAL=2
OSRM_REQUEST_BACKOFF_BASE=0.5
OSRM_REQUEST_MAX_SLEEP=2.0

# H3/Clustering defaults (can also live in clustering.flags)
H3_RES=8
H3_LAMBDA=100000
FLOW_ALPHA=1.6
FLOW_GAMMA=6.0
USE_CELL_FLOW=1

# VRP/Clustering toggles
VRP_PRECLUSTER=1
VRP_PRECLUSTER_METHOD=kmedoids
VRP_PRECLUSTER_OSRM_MAX_N=80
VRP_KMEDOIDS_OSRM_CENTERS=1
VRP_ROUTE_TIME_LIMIT_SEC=10
VRP_META=gls
VRP_FIRST=parallel_cheapest_insertion

# Google Maps (required)
GOOGLE_API_KEY=REPLACE_WITH_API_KEY
GOOGLE_QPS=5
GOOGLE_TIMEOUT=10
GOOGLE_RETRY_TIMEOUT=60
